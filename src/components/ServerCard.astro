---
interface Props {
  server: {
    id: number;
    name: string;
    status: "published" | "draft";
    type: "minecraft" | "other" | "web";
    ip: string;
    port: number;
    protocol: string;
    description?: string;
  };
}

const { server } = Astro.props;
const isWeb = server.type === 'web';
const isBedrock = server.type === 'minecraft' && (server.protocol?.toLowerCase().includes('bedrock') || server.port === 19132);

// Initial placeholder values
const address = server.ip;
---

<server-card data-server={JSON.stringify(server)} data-is-bedrock={String(isBedrock)} class="server-card glass-card loading">
    <div class="server-header">
        <div class="server-ident">
            <div class="status-badge bg-loading">
                <div class="loader-spinner"></div>
                <span class="status-text">確認中...</span>
            </div>
            <h3 class="server-title">{server.name}</h3>
        </div>
        <div class="server-type-pill">
            {server.type === 'minecraft' 
                ? (isBedrock ? 'Minecraft (BE)' : 'Minecraft') 
                : (server.type === 'web' ? 'Web Service' : (server.protocol || 'Service'))}
        </div>
    </div>

    <div class="server-body">
        <div class="skeleton-content">
             <div class="skeleton-line w-3_4"></div>
             <div class="skeleton-grid">
                 <div class="skeleton-box"></div>
                 <div class="skeleton-box"></div>
             </div>
        </div>
        
        <div class="live-content" style="display: none;">
             <!-- Content will be injected via JS -->
        </div>

        {server.description && <p class="server-desc">{server.description}</p>}
    </div>

    <div class="server-footer">
        {isWeb ? (
            <a href={server.ip.startsWith('http') ? server.ip : `https://${server.ip}`} target="_blank" rel="noopener noreferrer" class="visit-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-xs"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg> サイトを開く
            </a>
        ) : (
             <div class="copy-ip" data-ip={`${server.ip}:${server.port}`}>
                <span class="ip-text">{server.ip}:{server.port}</span>
                <button class="copy-btn">コピー</button>
            </div>
        )}
    </div>
</server-card>

<style>
    .server-card {
        padding: 0;
        display: flex;
        flex-direction: column;
        transition: all 0.3s cubic-bezier(0.2, 1, 0.2, 1);
        border: 1px solid var(--border-glass);
        min-height: 240px;
        overflow: hidden;
        position: relative;
    }

    .server-card.online { border-top: 4px solid #10b981; }
    .server-card.offline { border-top: 4px solid #ef4444; }
    .server-card.loading { border-top: 4px solid var(--border-subtle); }

    .server-header {
        padding: 1.5rem 1.5rem 1rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        border-bottom: 1px solid var(--border-subtle);
        background: rgba(255, 255, 255, 0.03);
    }

    .server-ident {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.25rem 0.6rem;
        border-radius: 99px;
        font-size: 0.7rem;
        font-weight: 800;
        color: white;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
        align-self: flex-start;
    }

    .bg-online { background: #10b981; box-shadow: 0 2px 8px rgba(16, 185, 129, 0.25); }
    .bg-offline { background: #ef4444; box-shadow: 0 2px 8px rgba(239, 68, 68, 0.2); }
    .bg-loading { background: var(--bg-surface-hover); color: var(--text-muted); border: 1px solid var(--border-subtle); }

    .loader-spinner {
        width: 12px;
        height: 12px;
        border: 2px solid var(--text-muted);
        border-top-color: transparent;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin { 100% { transform: rotate(360deg); } }

    .server-title {
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--text-main);
        margin: 0;
        line-height: 1.2;
    }

    .server-type-pill {
        font-size: 0.65rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.2rem 0.5rem;
        background: var(--bg-surface-hover);
        border: 1px solid var(--border-subtle);
        color: var(--text-muted);
        border-radius: 6px;
        letter-spacing: 0.05em;
        height: fit-content;
    }

    .server-body {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    /* Skeleton */
    .skeleton-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        animation: pulse 1.5s infinite ease-in-out;
    }
    .skeleton-line { height: 1rem; background: var(--bg-surface-hover); border-radius: 4px; }
    .w-3_4 { width: 75%; }
    .skeleton-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
    .skeleton-box { height: 3.5rem; background: var(--bg-surface-hover); border-radius: 12px; }

    @keyframes pulse { 0% { opacity: 0.6; } 50% { opacity: 0.3; } 100% { opacity: 0.6; } }

    /* Dynamic Content Styles (Scoped via :global) */
    .server-card :global(.motd-container) {
        background: var(--bg-surface-hover);
        padding: 0.75rem 1rem;
        border-radius: 8px;
        border-left: 3px solid var(--accent-secondary);
        font-family: 'Noto Sans JP', sans-serif;
        font-size: 0.85rem;
        line-height: 1.5;
        color: var(--text-main);
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
        margin-bottom: 1rem;
    }

    .server-card :global(.motd-line) { margin: 0; }

    .server-card :global(.server-stats-grid) {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
    }

    .server-card :global(.server-stat) {
        display: flex;
        flex-direction: column;
        background: var(--bg-surface-hover);
        padding: 0.85rem;
        border-radius: 12px;
        border: 1px solid var(--border-subtle);
        position: relative;
        overflow: hidden;
    }

    .server-card :global(.stat-header) {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.25rem;
        color: var(--text-muted);
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .server-card :global(.stat-icon) {
        width: 1rem;
        height: 1rem;
        opacity: 0.7;
    }

    .server-card :global(.stat-value) {
        font-size: 1.1rem;
        font-weight: 800;
        color: var(--text-main);
        z-index: 1;
    }

    .server-card :global(.stat-sub) {
        font-size: 0.8rem;
        color: var(--text-muted);
        font-weight: 500;
        margin-left: 0.2rem;
    }

    .server-card :global(.stat-divider) {
        color: var(--border-subtle);
        margin: 0 0.2rem;
        font-weight: 400;
    }

    .server-card :global(.ping-meta) {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        width: 100%;
    }

    .server-card :global(.sparkline) {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 40px;
        opacity: 0.15;
        pointer-events: none;
        z-index: 0;
        color: var(--accent-primary);
    }
    
    .server-card :global(.bg-stat-online) { color: #10b981; }

    /* Player List */
    .server-card :global(.player-list-section) {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: 0.5rem;
    }

    .server-card :global(.mini-label) {
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-muted);
        text-transform: uppercase;
    }

    .server-card :global(.player-avatars) {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
    }

    .server-card :global(.player-chip) {
        width: 28px;
        height: 28px;
        border-radius: 6px;
        overflow: hidden;
        border: 1px solid var(--border-subtle);
        transition: transform 0.2s;
        position: relative;
    }
    
    .server-card :global(.player-chip:hover) {
        transform: scale(1.2);
        z-index: 10;
        border-color: var(--accent-primary);
    }

    .server-card :global(.player-head) {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .server-card :global(.more-players) {
        font-size: 0.75rem;
        color: var(--text-muted);
        background: var(--bg-surface-hover);
        padding: 0 0.5rem;
        border-radius: 4px;
        display: flex;
        align-items: center;
        height: 28px;
        font-weight: 600;
    }

    /* Offline/Error States */
    .server-card :global(.offline-placeholder) {
        text-align: center;
        padding: 2rem 1rem;
        background: var(--bg-surface-hover);
        border-radius: 12px;
        border: 1px dashed var(--border-subtle);
    }

    .server-card :global(.server-ip-display) {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-family: 'Outfit', monospace;
        color: var(--text-main);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .server-card :global(.offline-msg) {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin: 0;
    }

    .server-desc {
        font-size: 0.9rem;
        color: var(--text-muted);
        line-height: 1.6;
        margin-top: auto;
    }

    /* Footer */
    .server-footer {
        padding: 1rem 1.5rem;
        border-top: 1px solid var(--border-subtle);
        background: rgba(255, 255, 255, 0.02);
    }

    .copy-ip {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: var(--bg-surface-solid);
        padding: 0.4rem 0.5rem 0.4rem 1rem;
        border-radius: 8px;
        border: 1px solid var(--border-subtle);
        font-family: 'Outfit', monospace;
    }

    .ip-text {
        font-size: 0.85rem;
        color: var(--text-main);
        font-weight: 600;
    }

    .copy-btn {
        background: var(--bg-surface-hover);
        color: var(--text-muted);
        border: 1px solid var(--border-subtle);
        padding: 0.35rem 0.75rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.2s;
    }

    .copy-btn:hover {
        background: var(--accent-primary);
        color: white;
        border-color: var(--accent-primary);
    }

    .visit-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        background: var(--accent-primary);
        color: white;
        text-decoration: none;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.9rem;
        width: 100%;
        transition: all 0.2s;
    }

    .visit-btn:hover {
        background: var(--accent-secondary);
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
    }

    .icon-xs { width: 1rem; height: 1rem; }
</style>

<script>
    class ServerCardElement extends HTMLElement {
        constructor() {
            super();
            this.init();
        }

        async init() {
            let serverData: any = {};
            try {
                const rawData = this.getAttribute('data-server'); 
                serverData = rawData ? JSON.parse(rawData) : {};
            } catch (e) {
                console.error('Failed to parse server data', e);
                return;
            }

            if (!serverData.ip) {
                this.renderError();
                return;
            }

            const isBedrock = this.getAttribute('data-is-bedrock') === 'true';
            
            try {
                const query = new URLSearchParams({
                    type: serverData.type,
                    ip: serverData.ip,
                    port: String(serverData.port || ''),
                    bedrock: String(isBedrock)
                });

                const res = await fetch(`/api/server-status?${query}`);
                if (!res.ok) throw new Error('API Error');
                const data = await res.json();
                
                this.render(data, serverData);
            } catch (e) {
                console.error('Failed to load server status', e);
                this.renderError();
            }
        }

        renderError() {
            this.classList.remove('loading');
            this.classList.add('offline');
            const statusText = this.querySelector('.status-text');
            if (statusText) {
                statusText.textContent = '不明';
                statusText.parentElement?.classList.remove('bg-loading');
                statusText.parentElement?.classList.add('bg-offline');
                const spinner = statusText.parentElement?.querySelector('.loader-spinner');
                if (spinner) spinner.remove();
            }
            
            this.toggleContent(false);
            
            const liveContent = this.querySelector('.live-content');
            if (liveContent) {
                liveContent.innerHTML = `<div class="offline-placeholder"><p class="offline-msg">ステータス取得失敗</p></div>`;
            }
        }

        toggleContent(showLive: boolean) {
            const skeleton = this.querySelector('.skeleton-content') as HTMLElement;
            const live = this.querySelector('.live-content') as HTMLElement;
            if (skeleton) skeleton.style.display = showLive ? 'none' : 'flex';
            if (live) live.style.display = showLive ? 'block' : 'none';
        }

        render(data: any, serverData: any) {
             this.classList.remove('loading');
             const isOnline = data.online;
             const statusBadge = this.querySelector('.status-badge');
             
             // Update Status Badge
             if (statusBadge) {
                 statusBadge.className = `status-badge ${isOnline ? 'bg-online' : 'bg-offline'}`;
                 statusBadge.innerHTML = isOnline 
                    ? `<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"/></svg> <span>ONLINE</span>`
                    : `<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg> <span>OFFLINE</span>`;
             }
            
            const liveContent = this.querySelector('.live-content');
            if (!liveContent) return;

            if (isOnline) {
                this.classList.add('online');
                
                let html = '';
                
                // MOTD
                 if (data.motd?.clean && data.motd.clean.length > 0) {
                    html += `<div class="motd-container">
                        ${data.motd.clean.map((line: string) => `<p class="motd-line">${line}</p>`).join('')}
                    </div>`;
                }

                // Stats Grid
                html += `<div class="server-stats-grid">`;
                
                // Players
                if (serverData.type === 'minecraft') {
                    html += `
                        <div class="server-stat">
                            <div class="stat-header">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="stat-icon"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                                <span>Players</span>
                            </div>
                            <div class="stat-value">
                                ${data.players?.online || 0}<span class="stat-divider">/</span><span class="stat-sub">${data.players?.max || 0}</span>
                            </div>
                        </div>
                    `;
                }
                
                // Availability
                 html += `
                    <div class="server-stat">
                        <div class="stat-header">
                             <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="stat-icon"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
                             <span>Uptime</span>
                        </div>
                        <div class="stat-value ${data.availability > 99 ? 'bg-stat-online' : ''}">${data.availability ?? 100}<span class="stat-sub">%</span></div>
                    </div>`;
                
                // Ping / Sparkline
                html += `
                    <div class="server-stat">
                        <div class="stat-header">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="stat-icon"><path d="M2 12h5"/><path d="M12 2v10"/><path d="m19 5-7 7-7-7"/></svg>
                            <span>Ping</span>
                        </div>
                        <div class="ping-meta">
                            <span class="stat-value">${data.avgPing}<span class="stat-sub">ms</span></span>
                        </div>
                        ${data.sparklinePath ? `
                            <svg class="sparkline" viewBox="0 0 100 30" preserveAspectRatio="none">
                                <path d="${data.sparklinePath}" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        ` : ''}
                    </div>
                </div>`;
                
                // Player List
                if (data.players?.list && data.players.list.length > 0) {
                     html += `<div class="player-list-section">
                        <span class="mini-label">Online</span>
                        <div class="player-avatars">
                            ${data.players.list.slice(0, 10).map((p: any) => `
                                <div class="player-chip" title="${p.name}">
                                    <img src="https://minotar.net/avatar/${p.uuid || p.name}/28" class="player-head" onerror="this.src='https://minotar.net/avatar/steve/28'">
                                </div>
                            `).join('')}
                            ${data.players.list.length > 10 ? `<div class="more-players">+${data.players.list.length - 10}</div>` : ''}
                        </div>
                    </div>`;
                }

                liveContent.innerHTML = html;
            } else {
                this.classList.add('offline');
                liveContent.innerHTML = `
                    <div class="offline-placeholder">
                        <div class="server-ip-display">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-xs"><circle cx="12" cy="12" r="10"/><line x1="2" x2="22" y1="12" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg> 
                            ${serverData.ip}:${serverData.port}
                        </div>
                        <p class="offline-msg">サーバーは現在オフラインです</p>
                    </div>`;
            }

            this.toggleContent(true);
        }
    }

    if (!customElements.get('server-card')) {
        customElements.define('server-card', ServerCardElement);
    }
    
    // Copy Logic
    document.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target.closest('.copy-btn')) {
             const container = target.closest('.copy-ip');
             const ip = container?.getAttribute('data-ip');
             const btn = target.closest('.copy-btn');
             if (ip && btn) {
                navigator.clipboard.writeText(ip);
                const originalText = btn.textContent;
                btn.textContent = 'COPIED';
                setTimeout(() => btn.textContent = originalText, 2000);
             }
        }
    });
</script>
