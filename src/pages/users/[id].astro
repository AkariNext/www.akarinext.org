import Layout from "../../layouts/Layout.astro";
import { directus, readItem, readItems, skipDirectusFetch, type Author, type GamePlayer, type Post } from "../../lib/directus";
import { Twitter, Github, Globe, Twitch, Youtube, Gamepad2, Play, CheckCircle, MessageSquare, BookOpen, Clock, ArrowRight, Shield } from "lucide-astro";
import PostCard from "../../components/PostCard.astro";

const { id } = Astro.params;

if (!id) {
    return Astro.redirect('/404');
}

let user: Author | null = null;
let allGames: GamePlayer[] = [];
let userPosts: Post[] = [];

if (!skipDirectusFetch) {
    try {
        const userId = parseInt(id);
        if (Number.isNaN(userId)) {
             return Astro.redirect('/404');
        }

        // Fetch User and their Games (M2M)
        user = await directus.request(readItem('authors', userId, {
            fields: [
                '*',
                'playing_games.games_id.id',
                'playing_games.games_id.name',
                'playing_games.games_id.slug',
                'playing_games.games_id.cover_image',
                'finished_games.games_id.id',
                'finished_games.games_id.name',
                'finished_games.games_id.slug',
                'finished_games.games_id.cover_image',
            ]
        }));

        // Transform M2M to GamePlayer structure
        if (user.playing_games) {
            user.playing_games.forEach((g: any) => {
                if (g.games_id) {
                    allGames.push({
                        id: 0,
                        user: user!,
                        game: g.games_id,
                        started_at: '',
                        status: 'playing'
                    });
                }
            });
        }

        if (user.finished_games) {
            user.finished_games.forEach((g: any) => {
                if (g.games_id) {
                    allGames.push({
                        id: 0,
                        user: user!,
                        game: g.games_id,
                        started_at: '',
                        status: 'finished'
                    });
                }
            });
        }

        const posts = await directus.request(readItems('posts', {
            filter: {
                author: { id: { _eq: userId } },
                status: { _eq: 'published' }
            } as any,
            fields: ['id', 'title', 'slug', 'published_date', 'category', 'image', { author: ['id', 'name', 'avatar'] }],
            sort: ['-published_date'],
        })) as unknown as Post[];

        if (posts) {
            userPosts = posts;
        }

    } catch (e) {
        console.error("Error fetching user profile:", e);
    }
}

// Contribution Graph Logic
const generateContributionData = () => {
    const data: Record<string, number> = {};
    const today = new Date();
    
    // Combine activity dates from posts
    userPosts.forEach(p => {
        if (p.published_date) {
            const date = new Date(p.published_date).toISOString().split('T')[0];
            data[date] = (data[date] || 0) + 1;
        }
    });

    // Generate last 365 days
    const days = [];
    for (let i = 364; i >= 0; i--) {
        const d = new Date();
        d.setDate(today.getDate() - i);
        const dateStr = d.toISOString().split('T')[0];
        const count = data[dateStr] || 0;
        
        // Level 0-4
        let level = 0;
        if (count > 0) level = 1;
        if (count > 2) level = 2;
        if (count > 4) level = 3;
        if (count > 8) level = 4;

        days.push({ date: dateStr, count, level });
    }
    return days;
};

const activityDays = generateContributionData();
const totalContributions = Object.values(activityDays).reduce((sum, day) => sum + day.count, 0);

if (!user) {
    return Astro.redirect('/404');
}

const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL || "http://localhost:8055";
const avatarUrl = user.avatar ? `${directusUrl}/assets/${user.avatar}` : null;

const getSocialIcon = (platform: string) => {
    switch (platform?.toLowerCase()) {
        case 'twitter': return Twitter;
        case 'x': return Twitter;
        case 'x (twitter)': return Twitter;
        case 'github': return Github;
        case 'twitch': return Twitch;
        case 'youtube': return Youtube;
        case 'discord': return MessageSquare;
        default: return Globe;
    }
};

const getCoverUrl = (cover: string | { id: string } | null | undefined) => {
    if (!cover) return null;
    const id = typeof cover === 'string' ? cover : cover.id;
    return `${directusUrl}/assets/${id}?width=360&height=480&fit=cover`;
}

const getStatusLabel = (status: string) => {
    switch (status) {
        case 'playing': return 'プレイ中';
        case 'finished': return 'プレイ終了';
        default: return status;
    }
}
---

<Layout title={user.name} description={`${user.name}さんのプロフィールとゲームコレクション。`}>
    <div class="profile-header">
        <div class="container profile-container">
            <div class="profile-avatar-wrapper">
                {avatarUrl ? (
                    <img src={avatarUrl} alt={user.name} class="profile-avatar" />
                ) : (
                    <div class="profile-avatar-placeholder">
                        <span class="avatar-initial">{user.name.charAt(0).toUpperCase()}</span>
                    </div>
                )}
            </div>
            
            <div class="profile-info">
                <div class="profile-title-row">
                    <h1 class="profile-name">{user.name}</h1>
                    {user.is_staff && <span class="staff-tag-premium"><Shield class="icon-tiny" /> STAFF</span>}
                </div>
                {user.bio && <p class="profile-bio">{user.bio}</p>}
                
                <div class="profile-meta-row">
                    <div class="profile-stats-card">
                        <div class="stat-item">
                            <span class="stat-value">{userPosts.length}</span>
                            <span class="stat-label">Articles</span>
                        </div>
                        <div class="stat-divider"></div>
                        <div class="stat-item">
                            <span class="stat-value">{allGames.length}</span>
                            <span class="stat-label">Games</span>
                        </div>
                    </div>

                    {user.social_links && user.social_links.length > 0 && (
                        <div class="social-links-premium">
                            {user.social_links.map((link: { platform: string; url: string }) => {
                                const Icon = getSocialIcon(link.platform);
                                return (
                                    <a href={link.url} target="_blank" rel="noopener noreferrer" class="social-link-btn" title={link.platform}>
                                        <Icon class="social-icon-sm" />
                                    </a>
                                );
                            })}
                        </div>
                    )}
                </div>
            </div>
        </div>
    </div>

    <div class="container content-container">
        <!-- Contribution Graph Section -->
        <section class="activity-section">
            <div class="section-header-row">
                <h2 class="section-title-premium">
                    <BookOpen class="title-icon" /> 
                    執筆アクティビティ
                </h2>
                <span class="total-activity">{totalContributions} articles published in the last year</span>
            </div>
            
            <div class="contribution-card-premium">
                <div class="graph-wrapper">
                    <div class="graph-scroll">
                        <div class="contribution-grid">
                            {activityDays.map(day => (
                                <div 
                                    class={`day-cell level-${day.level}`} 
                                    title={`${day.date}: ${day.count} activities`}
                                ></div>
                            ))}
                        </div>
                    </div>
                </div>
                <div class="graph-footer">
                    <span>Less</span>
                    <div class="legend">
                        <div class="day-cell level-0"></div>
                        <div class="day-cell level-1"></div>
                        <div class="day-cell level-2"></div>
                        <div class="day-cell level-3"></div>
                        <div class="day-cell level-4"></div>
                    </div>
                    <span>More</span>
                </div>
            </div>
        </section>

        <!-- Authored Posts Section -->
        {userPosts.length > 0 && (
            <section class="authored-posts-section">
                <div class="section-header-row">
                    <h2 class="section-title-premium">
                        <BookOpen class="title-icon" /> 
                        執筆した記事
                    </h2>
                    <a href="/posts" class="view-all-link">
                        すべて見る <ArrowRight class="icon-tiny" />
                    </a>
                </div>

                <div class="posts-grid-compact">
                    {userPosts.map((post) => (
                        <PostCard post={post as any} />
                    ))}
                </div>
            </section>
        )}

        <!-- Game Collection Gallery -->
        {allGames.length > 0 ? (
            <section class="game-section">
                <div class="section-header-row">
                    <h2 class="section-title-premium">
                        <Gamepad2 class="title-icon" /> 
                        ゲームコレクション
                    </h2>
                    <span class="collection-count">{allGames.length} タイトル</span>
                </div>

                <div class="games-gallery-grid">
                    {allGames.map((p) => {
                        const coverUrl = getCoverUrl(p.game.cover_image);
                        return (
                            <div class="game-poster-item">
                                <div class="poster-card-premium">
                                    <div class="poster-image-box">
                                        {coverUrl ? (
                                            <img src={coverUrl} alt={p.game.name} class="poster-img-fluid" loading="lazy" />
                                        ) : (
                                            <div class="poster-placeholder-premium">
                                                <Gamepad2 class="placeholder-icon-lg" />
                                            </div>
                                        )}
                                        <div class="poster-hover-glow"></div>
                                    </div>
                                    
                                    <div class="info-glass-panel">
                                        <h3 class="game-name-display">{p.game.name}</h3>
                                        {p.status && (
                                            <div class={`status-indicator ${p.status}`}>
                                                <div class="status-dot"></div>
                                                <span>{getStatusLabel(p.status)}</span>
                                            </div>
                                        )}
                                    </div>
                                </div>
                            </div>
                        );
                    })}
                </div>
            </section>
        ) : (
            <div class="profile-empty-state glass-card">
                <Gamepad2 class="empty-icon-fancy" />
                <p>登録されているゲームはまだありません。</p>
            </div>
        )}
    </div>
</Layout>

