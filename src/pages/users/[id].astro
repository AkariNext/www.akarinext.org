---
import Layout from "../../layouts/Layout.astro";
import { directus, readItem, readItems, skipDirectusFetch, type Author, type GamePlayer } from "../../lib/directus";
import { Twitter, Github, Globe, Twitch, Youtube, Gamepad2, Play, CheckCircle, MessageSquare } from "lucide-astro";

const { id } = Astro.params;

if (!id) {
    return Astro.redirect('/404');
}

let user: Author | null = null;
let allGames: GamePlayer[] = [];

if (!skipDirectusFetch) {
    try {
        const userId = parseInt(id);
        if (Number.isNaN(userId)) {
             return Astro.redirect('/404');
        }

        user = await directus.request(readItem('authors', userId));

        const players = await directus.request(readItems('game_players', {
            filter: {
                user: { _eq: userId }
            } as any,
            fields: ['status', { game: ['id', 'name', 'slug', 'cover_image'] }],
            sort: ['-started_at']
        })) as unknown as GamePlayer[];

        if (players) {
            allGames = players;
        }

    } catch (e) {
        console.error("Error fetching user profile:", e);
        // If fetch fails (e.g. 403 Forbidden on id lookup), we might want to just show 404
    }
}

if (!user) {
    return Astro.redirect('/404');
}

const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL || "http://localhost:8055";
const avatarUrl = user.avatar ? `${directusUrl}/assets/${user.avatar}` : null;

const getSocialIcon = (platform: string) => {
    switch (platform?.toLowerCase()) {
        case 'twitter': return Twitter;
        case 'x': return Twitter;
        case 'x (twitter)': return Twitter;
        case 'github': return Github;
        case 'twitch': return Twitch;
        case 'youtube': return Youtube;
        case 'discord': return MessageSquare;
        default: return Globe;
    }
};

const getCoverUrl = (cover: string | { id: string } | null | undefined) => {
    if (!cover) return null;
    const id = typeof cover === 'string' ? cover : cover.id;
    return `${directusUrl}/assets/${id}?width=360&height=480&fit=cover`;
}

const getStatusLabel = (status: string) => {
    switch (status) {
        case 'playing': return 'プレイ中';
        case 'finished': return 'プレイ終了';
        default: return status;
    }
}
---

<Layout title={user.name} description={`${user.name}さんのプロフィールとゲームコレクション。`}>
    <div class="profile-header">
        <div class="container profile-container">
            <div class="profile-avatar-wrapper">
                {avatarUrl ? (
                    <img src={avatarUrl} alt={user.name} class="profile-avatar" />
                ) : (
                    <div class="profile-avatar-placeholder">
                        <span class="avatar-initial">{user.name.charAt(0).toUpperCase()}</span>
                    </div>
                )}
            </div>
            
            <div class="profile-info">
                <h1 class="profile-name">{user.name}</h1>
                {user.bio && <p class="profile-bio">{user.bio}</p>}
                
                {user.social_links && user.social_links.length > 0 && (
                    <div class="social-links">
                        {user.social_links.map((link: { platform: string; url: string }) => {
                            const Icon = getSocialIcon(link.platform);
                            return (
                                <a href={link.url} target="_blank" rel="noopener noreferrer" class="social-link" title={link.platform}>
                                    <Icon class="social-icon" />
                                </a>
                            );
                        })}
                    </div>
                )}
            </div>
        </div>
    </div>

    <div class="container content-container">
        <!-- Game Collection Gallery -->
        {allGames.length > 0 ? (
            <section class="game-section">
                <div class="section-header-row">
                    <h2 class="section-title-premium">
                        <Gamepad2 class="title-icon" /> 
                        ゲームコレクション
                    </h2>
                    <span class="collection-count">{allGames.length} タイトル</span>
                </div>

                <div class="games-gallery-grid">
                    {allGames.map((p) => {
                        const coverUrl = getCoverUrl(p.game.cover_image);
                        return (
                            <div class="game-poster-item">
                                <div class="poster-card-premium">
                                    <div class="poster-image-box">
                                        {coverUrl ? (
                                            <img src={coverUrl} alt={p.game.name} class="poster-img-fluid" loading="lazy" />
                                        ) : (
                                            <div class="poster-placeholder-premium">
                                                <Gamepad2 class="placeholder-icon-lg" />
                                            </div>
                                        )}
                                        <div class="poster-hover-glow"></div>
                                    </div>
                                    
                                    <div class="info-glass-panel">
                                        <h3 class="game-name-display">{p.game.name}</h3>
                                        {p.status && (
                                            <div class={`status-indicator ${p.status}`}>
                                                <div class="status-dot"></div>
                                                <span>{getStatusLabel(p.status)}</span>
                                            </div>
                                        )}
                                    </div>
                                </div>
                            </div>
                        );
                    })}
                </div>
            </section>
        ) : (
            <div class="profile-empty-state glass-card">
                <Gamepad2 class="empty-icon-fancy" />
                <p>登録されているゲームはまだありません。</p>
            </div>
        )}
    </div>
</Layout>

<style>
    .profile-header {
        background: radial-gradient(circle at top right, var(--accent-soft), transparent 60%), var(--bg-surface);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        padding: 5rem 0 4rem;
        border-bottom: 1px solid var(--border-glass);
        margin-bottom: 4rem;
    }

    .profile-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 2.5rem;
    }
    
    @media (min-width: 768px) {
        .profile-container {
            flex-direction: row;
            text-align: left;
            align-items: center;
        }
    }

    .profile-avatar-wrapper {
        position: relative;
    }
    
    .profile-avatar {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid var(--bg-surface-solid);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }
    
    .profile-avatar-placeholder {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: var(--accent-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 5px solid var(--bg-surface-solid);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }
    
    .avatar-initial {
        font-size: 3.5rem;
        color: white;
        font-weight: 800;
    }

    .profile-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .profile-name {
        font-size: 3rem;
        font-weight: 900;
        color: var(--text-main);
        line-height: 1.1;
        letter-spacing: -0.02em;
    }

    .profile-bio {
        font-size: 1.15rem;
        color: var(--text-muted);
        max-width: 600px;
        line-height: 1.7;
    }

    .social-links {
        display: flex;
        gap: 1.25rem;
        margin-top: 0.5rem;
    }
    
    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.75rem;
        height: 2.75rem;
        border-radius: 12px;
        background: var(--bg-surface-solid);
        border: 1px solid var(--border-subtle);
        color: var(--text-muted);
        transition: all 0.3s cubic-bezier(0.2, 1, 0.2, 1);
    }
    
    .social-link:hover {
        color: var(--accent-primary);
        border-color: var(--accent-primary);
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(14, 165, 233, 0.2);
    }
    
    .social-icon {
        width: 1.4rem;
        height: 1.4rem;
    }

    /* Game Collection Improvements */
    .game-section {
        margin-bottom: 5rem;
    }

    .section-header-row {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-subtle);
    }

    .section-title-premium {
        font-size: 1.75rem;
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--text-main);
        margin: 0;
    }

    .title-icon {
        color: var(--accent-primary);
        width: 2rem;
        height: 2rem;
    }

    .collection-count {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .games-gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 2.5rem;
    }

    .game-poster-item {
        transition: transform 0.4s cubic-bezier(0.2, 1, 0.2, 1);
    }

    .poster-card-premium {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        background: var(--bg-surface-solid);
        border: 1px solid var(--border-subtle);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        transition: all 0.4s cubic-bezier(0.2, 1, 0.2, 1);
        display: flex;
        flex-direction: column;
    }

    .game-poster-item:hover .poster-card-premium {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px rgba(0,0,0,0.25);
        border-color: var(--accent-primary);
    }

    .poster-image-box {
        position: relative;
        aspect-ratio: 3 / 4;
        overflow: hidden;
        background: #000;
    }

    .poster-img-fluid {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.7s cubic-bezier(0.2, 1, 0.2, 1);
    }

    .game-poster-item:hover .poster-img-fluid {
        transform: scale(1.1);
        opacity: 0.85;
    }

    .poster-hover-glow {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center, var(--accent-primary) 0%, transparent 75%);
        opacity: 0;
        transition: opacity 0.4s ease;
        mix-blend-mode: soft-light;
    }

    .game-poster-item:hover .poster-hover-glow {
        opacity: 0.4;
    }

    .info-glass-panel {
        position: absolute;
        bottom: 12px;
        left: 12px;
        right: 12px;
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 16px;
        padding: 1rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        z-index: 5;
        transition: all 0.3s;
    }

    :global([data-theme="dark"]) .info-glass-panel {
        background: rgba(30, 41, 59, 0.8);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .game-poster-item:hover .info-glass-panel {
        background: rgba(255, 255, 255, 0.9);
        bottom: 16px;
    }

    :global([data-theme="dark"]) .game-poster-item:hover .info-glass-panel {
        background: rgba(15, 23, 42, 0.95);
    }

    .game-name-display {
        font-size: 1.05rem;
        font-weight: 800;
        color: var(--text-main);
        margin: 0;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        margin-top: 0.6rem;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .status-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: var(--accent-primary);
        box-shadow: 0 0 8px var(--accent-primary);
    }

    /* Status Color Variations */
    .status-indicator.finished {
        color: var(--text-muted);
        opacity: 0.7;
    }
    .status-indicator.finished .status-dot {
        background: var(--text-muted);
        box-shadow: none;
    }

    .status-indicator.playing .status-dot {
        background: #10b981; /* Green for playing */
        box-shadow: 0 0 8px #10b981;
    }

    .poster-placeholder-premium {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-surface-hover);
        color: var(--text-muted);
    }

    .placeholder-icon-lg {
        width: 3.5rem;
        height: 3.5rem;
        opacity: 0.2;
    }

    .profile-empty-state {
        text-align: center;
        padding: 6rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .empty-icon-fancy {
        width: 4rem;
        height: 4rem;
        color: var(--accent-primary);
        opacity: 0.2;
    }

    @media (max-width: 640px) {
        .games-gallery-grid {
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 1.5rem;
        }
        .profile-name { font-size: 2.25rem; }
        .info-glass-panel { padding: 0.75rem; bottom: 8px; left: 8px; right: 8px; }
        .game-name-display { font-size: 0.9rem; }
    }
</style>
