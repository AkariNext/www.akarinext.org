---
import Layout from "../layouts/Layout.astro";
import { Gamepad2, Code2, MessageCircle, ArrowRight, Zap, Trophy, Users } from "lucide-astro";
import {
  directus,
  readItems,
  readSingleton,
  skipDirectusFetch,
} from "../lib/directus";

// Fetch data
let globalSettings = {
  site_title: "AkariNext",
  site_description: "Connect, Play, and Share Your Journey.",
};

let recentPosts: Array<any> = [];
let recentGames: Array<any> = [];

if (!skipDirectusFetch) {
  try {
    const [settingsData, postsData, gamesData] = await Promise.all([
      directus.request(readSingleton("global")).catch(() => null),
      directus.request(
        readItems("posts", {
          fields: ["id", "title", "slug", "published_date", "category", "image", { author: ["name", "avatar"] }],
          filter: { status: { _eq: "published" } },
          sort: ["-published_date"],
          limit: 6,
        })
      ).catch(() => []),
      directus.request(
        readItems("games", {
          fields: ["id", "name", "slug", "cover_image"],
          limit: 4,
          sort: ["-id"] // Just getting some games
        })
      ).catch(() => [])
    ]);

    if (settingsData) globalSettings = settingsData;
    if (postsData) recentPosts = postsData;
    if (gamesData) recentGames = gamesData;

  } catch (error) {
    // Silent
  }
}

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('ja-JP', {
    month: 'short',
    day: 'numeric'
  });
};

const getCategoryIcon = (cat: string) => {
    switch(cat) {
        case 'tech': return Code2;
        case 'game': return Gamepad2;
        case 'misc': return MessageCircle;
        default: return MessageCircle;
    }
}

const getCategoryLabel = (cat: string) => {
    switch(cat) {
        case 'tech': return 'Dev';
        case 'game': return 'Game';
        case 'misc': return 'Chat';
        default: return 'Other';
    }
}

const getCategoryColor = (cat: string) => {
    switch(cat) {
        case 'tech': return 'var(--accent-primary)'; 
        case 'game': return '#10b981'; // green
        case 'misc': return '#f59e0b'; // amber
        default: return 'var(--text-muted)';
    }
}
---

<Layout title={globalSettings.site_title}>
  <!-- Community Hero -->
  <section class="hero-section">
      <div class="container hero-container">
          <div class="hero-content">
              <span class="hero-badge"><Zap class="icon icon-xs" /> Official Community</span>
              <h1 class="hero-title">
                  <span class="gradient-text">Create.</span>
                  <span class="gradient-text delay-1">Play.</span>
                  <span class="gradient-text delay-2">Connect.</span>
              </h1>
              <p class="hero-desc">
                  AkariNextは、ゲーム、開発、そして雑談を楽しむためのコミュニティです。
                  技術の共有から、深夜のゲーム大会まで。
              </p>
              <div class="hero-stats">
                  <div class="stat-item">
                      <span class="stat-value">Dev</span>
                      <span class="stat-label">Engineering</span>
                  </div>
                  <div class="stat-divider"></div>
                  <div class="stat-item">
                      <span class="stat-value">Game</span>
                      <span class="stat-label">Entertainment</span>
                  </div>
                  <div class="stat-divider"></div>
                  <div class="stat-item">
                      <span class="stat-value">Chat</span>
                      <span class="stat-label">Communication</span>
                  </div>
              </div>
              <div class="hero-actions">
                  <a href="/posts" class="btn btn-primary btn-lg">
                      Explore Stories <ArrowRight class="icon" />
                  </a>
                  <a href="/games" class="btn btn-lg">
                      View Games <Gamepad2 class="icon" />
                  </a>
              </div>
          </div>
          <div class="hero-visual">
              <div class="floating-cards">
                  <div class="glass-card float-card card-1">
                      <Code2 class="float-icon text-blue" />
                      <span>Tech Stack</span>
                  </div>
                  <div class="glass-card float-card card-2">
                      <Gamepad2 class="float-icon text-green" />
                      <span>Game Night</span>
                  </div>
                  <div class="glass-card float-card card-3">
                      <MessageCircle class="float-icon text-amber" />
                      <span>Random Chat</span>
                  </div>
              </div>
          </div>
      </div>
  </section>

  <!-- Features / Categories -->
  <section class="features-section container">
      <div class="features-grid">
          <a href="/posts?tag=tech" class="feature-card glass-card hover-glow-blue">
              <div class="feature-icon-box bg-blue-soft">
                  <Code2 class="icon text-blue" />
              </div>
              <h3>Development</h3>
              <p>プログラミングや技術選定についての知見を共有。</p>
          </a>
          <a href="/games" class="feature-card glass-card hover-glow-green">
              <div class="feature-icon-box bg-green-soft">
                  <Gamepad2 class="icon text-green" />
              </div>
              <h3>Gaming</h3>
              <p>メンバーが熱中しているゲームの記録やレビュー。</p>
          </a>
          <a href="/announcements" class="feature-card glass-card hover-glow-amber">
              <div class="feature-icon-box bg-amber-soft">
                  <Users class="icon text-amber" />
              </div>
              <h3>Community</h3>
              <p>イベント情報や日々の雑談、お知らせなど。</p>
          </a>
      </div>
  </section>

  <!-- Latest Activity Mix -->
  <section class="activity-section container">
      <div class="section-header">
          <h2 class="section-title">Latest Updates</h2>
          <a href="/posts" class="view-all">View All <ArrowRight class="icon icon-xs" /></a>
      </div>

      <div class="activity-grid">
          {recentPosts.length > 0 ? (
              recentPosts.map((post) => {
                  const Icon = getCategoryIcon(post.category);
                  const color = getCategoryColor(post.category);
                  const label = getCategoryLabel(post.category);
                  
                  return (
                    <a href={`/posts/${post.slug}`} class="activity-card glass-card">
                        <div class="card-image-wrapper">
                            {post.image ? (
                                <img 
                                    src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${post.image}?key=card-thumb`} 
                                    alt={post.title} 
                                    class="card-image"
                                    loading="lazy"
                                />
                            ) : (
                                <div class="card-image-placeholder" style={`background: linear-gradient(135deg, ${color}20, var(--bg-surface));`}>
                                    <Icon class="placeholder-icon" style={`color: ${color}`} />
                                </div>
                            )}
                            <div class="card-badge" style={`background: ${color}; color: white; box-shadow: 0 2px 8px ${color}60;`}>
                                <Icon class="icon icon-xs" /> {label}
                            </div>
                        </div>
                        
                        <div class="activity-content">
                            <span class="activity-date">{formatDate(post.published_date)}</span>
                            <h3 class="activity-title">
                                {post.title}
                            </h3>
                            <div class="activity-footer">
                                {post.author?.name && (
                                    <span class="author-info">
                                        by {post.author.name}
                                    </span>
                                )}
                            </div>
                        </div>
                    </a>
                  );
              })
          ) : (
              <div class="empty-state glass-card">
                  <p>No recent activity.</p>
              </div>
          )}
      </div>
  </section>
  
  <!-- Games Showcase -->
  {recentGames.length > 0 && (
    <section class="games-Showcase-section">
        <div class="container">
            <div class="games-banner glass-card">
                <div class="banner-content">
                    <h2><Trophy class="icon icon-lg text-yellow" /> Featured Games</h2>
                    <p>みんなが遊んでいる最新タイトルをチェックしよう</p>
                    <a href="/games" class="btn btn-sm">Library <ArrowRight class="icon icon-xs" /></a>
                </div>
                <div class="banner-images">
                    {recentGames.map(game => (
                       game.cover_image ? (
                           <div class="mini-game-cover">
                               <img src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${game.cover_image}?key=card-thumb`} alt={game.name} />
                           </div>
                       ) : <div class="mini-game-cover placeholder"></div>
                    ))}
                </div>
            </div>
        </div>
    </section>
  )}

</Layout>

<style>
  /* Hero */
  .hero-section {
      padding: 6rem 0 4rem;
      overflow: hidden;
      position: relative;
  }
  
  .hero-container {
      display: grid;
      grid-template-columns: 1.2fr 1fr;
      gap: 3rem;
      align-items: center;
  }
  
  .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: var(--bg-surface);
      border: 1px solid var(--border-subtle);
      border-radius: 99px;
      font-size: 0.85rem;
      font-weight: 600;
      color: var(--accent-primary);
      margin-bottom: 1.5rem;
      box-shadow: var(--shadow-sm);
  }
  
  .hero-title {
      font-size: 4rem;
      line-height: 1.1;
      font-weight: 800;
      letter-spacing: -0.03em;
      margin-bottom: 1.5rem;
      display: flex;
      flex-direction: column;
  }
  
  .gradient-text {
      background: linear-gradient(90deg, var(--text-main) 0%, var(--text-muted) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      display: inline-block;
  }
  
  .gradient-text:first-child {
      background: linear-gradient(90deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
  }
  
  .hero-desc {
      font-size: 1.15rem;
      color: var(--text-muted);
      line-height: 1.6;
      max-width: 500px;
      margin-bottom: 2.5rem;
  }
  
  .hero-stats {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      margin-bottom: 2.5rem;
  }
  
  .stat-item {
      display: flex;
      flex-direction: column;
  }
  
  .stat-value {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--text-main);
  }
  
  .stat-label {
      font-size: 0.75rem;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
  }
  
  .stat-divider {
      width: 1px;
      height: 2rem;
      background: var(--border-subtle);
  }
  
  .hero-actions {
      display: flex;
      gap: 1rem;
  }
  
  .btn-lg {
      padding: 0.875rem 2rem;
      font-size: 1rem;
  }
  
  /* Hero Visual */
  .hero-visual {
      position: relative;
      height: 400px;
      display: flex;
      align-items: center;
      justify-content: center;
  }
  
  .floating-cards {
      position: relative;
      width: 100%;
      height: 100%;
  }
  
  .float-card {
      position: absolute;
      padding: 1rem 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-weight: 600;
      font-size: 1rem;
      background: var(--bg-surface-hover);
      backdrop-filter: blur(20px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      border: 1px solid var(--border-glass);
      animation: float 6s ease-in-out infinite;
      color: var(--text-main);
  }
  
  .card-1 { top: 20%; left: 10%; transform: rotate(-5deg); animation-delay: 0s; }
  .card-2 { top: 50%; right: 10%; transform: rotate(10deg); animation-delay: 2s; }
  .card-3 { bottom: 20%; left: 30%; transform: rotate(-3deg); animation-delay: 4s; }
  
  @keyframes float {
      0%, 100% { transform: translateY(0) rotate(var(--rot)); }
      50% { transform: translateY(-15px) rotate(var(--rot)); }
  }
  
  .float-icon { width: 1.5rem; height: 1.5rem; }
  .text-blue { color: var(--accent-primary); }
  .text-green { color: #10b981; }
  .text-amber { color: #f59e0b; }
  .text-yellow { color: #eab308; }
  .bg-blue-soft { background: rgba(14, 165, 233, 0.1); }
  .bg-green-soft { background: rgba(16, 185, 129, 0.1); }
  .bg-amber-soft { background: rgba(245, 158, 11, 0.1); }

  /* Features */
  .features-section { margin-bottom: 5rem; }
  
  .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
  }
  
  .feature-card {
      padding: 2rem;
      text-decoration: none;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
      transition: all 0.3s;
  }
  
  .feature-icon-box {
      width: 3rem;
      height: 3rem;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
  }
  
  .feature-card h3 {
      font-size: 1.25rem;
      margin: 0;
  }
  
  .feature-card p {
      color: var(--text-muted);
      font-size: 0.95rem;
      margin: 0;
      line-height: 1.5;
  }

  /* Activity */
  .activity-section { margin-bottom: 5rem; }
  
  .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
  }
  
  .section-title { font-size: 2rem; }
  
  .activity-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      align-items: stretch;
      max-width: 100%;
   }
  
  .activity-card {
      max-width: 100%; 
      padding: 0; /* Remove padding from card container for image flush */
      display: flex;
      flex-direction: column;
      gap: 0;
      transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
      height: 100%;
      text-decoration: none;
      overflow: hidden; /* For image zoom */
      border: 1px solid var(--border-glass);
  }

  .activity-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px -10px rgba(0,0,0,0.1);
  }
  
  .card-image-wrapper {
      position: relative;
      width: 100%;
      height: 200px;
      overflow: hidden;
  }

  .card-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
  }

  .activity-card:hover .card-image {
      transform: scale(1.05);
  }
  
  .card-image-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
  }

  .placeholder-icon {
      width: 3rem;
      height: 3rem;
      opacity: 0.3;
  }

  .activity-content {
      padding: 1.5rem;
      flex: 1;
      display: flex;
      flex-direction: column;
  }
  
  .activity-footer {
      margin-top: auto;
      padding-top: 1rem;
      border-top: 1px solid var(--border-subtle);
      margin-top: 1.5rem;
  }
  
  .card-badge {
      position: absolute;
      top: 1rem;
      left: 1rem;
      padding: 0.35rem 0.85rem;
      border-radius: 99px;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      display: flex;
      align-items: center;
      gap: 0.35rem;
      backdrop-filter: blur(4px);
      z-index: 2;
  }
  
  .activity-date {
      font-size: 0.8rem;
      color: var(--text-muted);
      margin-bottom: 0.5rem;
      display: block;
  }
  
  .activity-title {
      font-size: 1.25rem;
      margin: 0;
      line-height: 1.4;
      font-weight: 700;
      color: var(--text-main);
  }
  
  .author-info {
      font-size: 0.85rem;
      color: var(--text-muted);
  }
  
  /* Games Banner */
  .games-banner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 3rem;
      background: radial-gradient(circle at right, var(--accent-soft), transparent 50%), var(--bg-surface);
      gap: 2rem;
      flex-wrap: wrap;
      border: 1px solid var(--border-glass);
  }
  
  .banner-content h2 { font-size: 1.75rem; display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.5rem; color: var(--text-main); }
  .banner-content p { color: var(--text-muted); margin-bottom: 1.5rem; }
  
  .banner-images {
      display: flex;
      gap: 1rem;
  }
  
  .mini-game-cover {
      width: 80px;
      height: 100px;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transform: rotate(3deg);
      border: 2px solid var(--border-light);
  }
  
  .mini-game-cover:nth-child(2) { transform: rotate(-2deg) translateY(-10px); }
  .mini-game-cover:nth-child(3) { transform: rotate(5deg); }
  
  .mini-game-cover img { width: 100%; height: 100%; object-fit: cover; }
  .placeholder { background: var(--border-subtle); }
  
  @media (max-width: 900px) {
      .hero-container { grid-template-columns: 1fr; text-align: center; }
      .hero-title { font-size: 3rem; align-items: center; }
      .hero-stats { justify-content: center; }
      .hero-actions { justify-content: center; }
      .hero-visual { display: none; }
      .games-banner { flex-direction: column; text-align: center; }
  }
</style>
