---
import Layout from "../../layouts/Layout.astro";
import { directus, readItems, skipDirectusFetch } from "../../lib/directus";
import { User, Gamepad2, Play, Users, Image as ImageIcon, Sparkles } from "lucide-astro";

// Types
interface Game {
  id: number;
  name: string;
  slug: string;
  description?: string;
  cover_image?: string | { id: string };
}
interface GamePlayer {
  id: number;
  user: { id: number; name: string; avatar?: string };
  game: { id: number; name: string; slug: string };
  started_at: string;
  status: string;
}

// Data Handling
let games: Game[] = [];
let gamePlayers: GamePlayer[] = [];
// Group players
const playersByGame = new Map<number, GamePlayer[]>();

if (!skipDirectusFetch) {
  try {
    games = (await directus.request(
      readItems("games", {
        fields: ["id", "name", "slug", "description", "cover_image"],
        sort: ["name"],
      })
    )) ?? [];

    // Fetch Users and their playing games
    const authors = (await directus.request(
      readItems("authors", {
        fields: [
          "id",
          "name",
          "avatar",
          "playing_games.games_id.id", // Fetch ID of the game
        ],
        filter: {
             // Only fetch authors who are playing at least one game (optional optimization)
             // playing_games: { _nnull: true } 
        } as any,
      })
    )) ?? [];

    // Map players to games
    authors.forEach((author: any) => {
        if (author.playing_games && Array.isArray(author.playing_games)) {
            author.playing_games.forEach((relation: any) => {
                const gameId = relation.games_id?.id;
                if (gameId) {
                    const list = playersByGame.get(gameId) || [];
                    list.push({
                        id: 0, // Dummy ID
                        user: { id: author.id, name: author.name, avatar: author.avatar },
                        game: { id: gameId, name: '', slug: '' }, // Name/Slug not needed here
                        started_at: '',
                        status: 'playing'
                    });
                     playersByGame.set(gameId, list);
                }
            });
        }
    });

  } catch (e) {
    // Silent fail
  }
}

const directusUrl = import.meta.env.PUBLIC_DIRECTUS_URL || "http://localhost:8055";

const getCoverUrl = (cover: Game['cover_image']) => {
    if (!cover) return null;
    const id = typeof cover === 'string' ? cover : cover.id;
    return `${directusUrl}/assets/${id}?width=360&height=480&fit=cover`;
}
---

<Layout title="Games" description="Current games being played by the community.">
    <div class="hero-section">
        <div class="hero-bg">
            <div class="orb orb-1"></div>
            <div class="orb orb-2"></div>
        </div>
        <div class="container hero-content">
            <div class="badge-wrapper">
                <span class="hero-badge">
                    <Gamepad2 class="icon-sm" /> Game Collection
                </span>
            </div>
            <h1 class="hero-title">
                ゲーム<br class="mobile-break" />
                <span class="gradient-text">ライブラリ</span>
            </h1>
            <p class="hero-desc">
                コミュニティメンバーが所有・プレイしている<br class="desktop-break"/>
                ゲームのコレクションを探索しましょう。
            </p>
        </div>
    </div>

    <div class="container main-content">
        <!-- Premium Search Bar -->
        <div class="search-section">
            <div class="search-bar-glass">
                <Users class="search-icon" />
                <input type="text" id="gameSearch" placeholder="タイトルやユーザー名で検索..." />
                <div class="stats-pill">
                    <span class="count">{games.length}</span>
                    <span class="label">タイトル</span>
                </div>
            </div>
        </div>

        <!-- Games Gallery -->
        {games.length > 0 ? (
            <div class="games-gallery" id="gamesGrid">
                {games.map((game) => {
                    const players = playersByGame.get(game.id) || [];
                    const coverUrl = getCoverUrl(game.cover_image);
                    const playerNames = players.map(p => p.user?.name).join(' ').toLowerCase();
                    
                    return (
                        <div class="game-item" data-name={game.name.toLowerCase()} data-players={playerNames}>
                            <div class="poster-card">
                                <div class="poster-image-area">
                                    {coverUrl ? (
                                        <img src={coverUrl} alt={game.name} class="poster-img" loading="lazy" />
                                    ) : (
                                        <div class="poster-empty">
                                            <Gamepad2 class="empty-icon" />
                                        </div>
                                    )}
                                    <div class="poster-glow"></div>
                                </div>
                                
                                <div class="poster-info-glass">
                                    <div class="info-top">
                                        <h3 class="game-name-title">{game.name}</h3>
                                        <div class="community-count">
                                            <Users class="icon-xxs" />
                                            <span>{players.length}</span>
                                        </div>
                                    </div>
                                    
                                    <div class="owner-reveal">
                                        {players.length > 0 ? (
                                            <>
                                                <div class="avatar-stack">
                                                    {players.slice(0, 4).map(p => (
                                                        <div class="stack-avatar" title={p.user?.name}>
                                                            {p.user?.avatar ? (
                                                                <img src={`${directusUrl}/assets/${p.user.avatar}?width=48&height=48&fit=cover`} alt="" />
                                                            ) : (
                                                                <div class="stack-placeholder">{p.user?.name?.charAt(0)}</div>
                                                            )}
                                                        </div>
                                                    ))}
                                                    {players.length > 4 && <div class="stack-more">+{players.length - 4}</div>}
                                                </div>
                                                <div class="owner-names-mini">
                                                    {players.map(p => p.user?.name).join(', ')}
                                                </div>
                                            </>
                                        ) : (
                                            <p class="owner-empty">プレイヤーはまだいません</p>
                                        )}
                                    </div>
                                </div>
                            </div>
                        </div>
                    );
                })}
            </div>
        ) : (
            <div class="empty-gallery">
                <Gamepad2 class="empty-icon-lg" />
                <h2>該当するゲームが見つかりません</h2>
                <p>別のキーワードで検索してみてください。</p>
            </div>
        )}
    </div>

    <script>
        const searchInput = document.getElementById('gameSearch') as HTMLInputElement;
        const items = document.querySelectorAll('.game-item');

        searchInput?.addEventListener('input', (e) => {
            const query = (e.target as HTMLInputElement).value.toLowerCase();
            
            items.forEach(item => {
                const name = (item as HTMLElement).dataset.name || '';
                const players = (item as HTMLElement).dataset.players || '';
                
                if (name.includes(query) || players.includes(query)) {
                    (item as HTMLElement).style.display = 'block';
                } else {
                    (item as HTMLElement).style.display = 'none';
                }
            });
        });

        // スマホ: タップでプレイヤー一覧を表示
        const isMobile = () => window.matchMedia('(max-width: 768px)').matches;
        items.forEach(item => {
            item.addEventListener('click', () => {
                if (!isMobile()) return;
                const el = item as HTMLElement;
                const wasExpanded = el.classList.contains('is-expanded');
                items.forEach(i => (i as HTMLElement).classList.remove('is-expanded'));
                if (!wasExpanded) el.classList.add('is-expanded');
            });
        });
    </script>
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 6rem 0 4rem;
        overflow: hidden;
        margin-bottom: 0; /* Search bar controls the spacing */
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        pointer-events: none;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.6;
    }

    .orb-1 {
        top: -10%;
        left: 20%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, var(--accent-secondary) 0%, transparent 70%);
        animation: float 10s ease-in-out infinite;
    }

    .orb-2 {
        bottom: 10%;
        right: 20%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--accent-primary) 0%, transparent 70%);
        animation: float 12s ease-in-out infinite reverse;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(20px, -20px); }
    }

    .hero-content {
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .badge-wrapper {
        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: var(--bg-surface);
        border: 1px solid var(--border-glass);
        border-radius: 99px;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--accent-primary);
        box-shadow: var(--shadow-sm);
        backdrop-filter: blur(4px);
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        letter-spacing: -0.03em;
    }

    .gradient-text {
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: transparent;
    }

    .hero-desc {
        font-size: 1.125rem;
        color: var(--text-muted);
        line-height: 1.7;
        max-width: 600px;
        margin: 0 auto;
    }

    .icon-sm { width: 1rem; height: 1rem; }
    .mobile-break { display: none; }

    @media (max-width: 768px) {
        .hero-section {
            padding: 4rem 0 5rem; /* Extra padding for search bar overlap */
        }
        .hero-title {
            font-size: 2.25rem;
        }
        .mobile-break { display: block; }
        .desktop-break { display: none; }
    }
  
    .main-content {
        padding-top: 0;
        padding-bottom: 8rem;
        position: relative;
        z-index: 2;
    }

    /* Premium Search Bar */
    .search-section {
        display: flex;
        justify-content: center;
        margin-bottom: 5rem;
        margin-top: -2.5rem; /* Overlap with hero */
    }

    .search-bar-glass {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.5rem 0.5rem 0.5rem 1.5rem;
        background: var(--bg-surface);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid var(--border-glass);
        border-radius: 100px;
        box-shadow: var(--shadow-glass), 0 10px 40px -10px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 500px;
        transition: all 0.3s cubic-bezier(0.2, 1, 0.2, 1);
    }

    .search-bar-glass:focus-within {
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover), 0 20px 50px -15px rgba(0,0,0,0.15);
        border-color: var(--accent-primary);
        max-width: 560px;
    }

    .search-icon {
        width: 1.25rem;
        height: 1.25rem;
        color: var(--accent-primary);
        opacity: 0.7;
    }

    .search-bar-glass input {
        flex: 1;
        min-width: 0;
        background: none;
        border: none;
        color: var(--text-main);
        font-size: 1rem;
        font-weight: 500;
        padding: 0.5rem 0;
        outline: none;
    }

    .stats-pill {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        background: var(--accent-primary);
        color: white;
        padding: 0.5rem 1.25rem;
        border-radius: 100px;
        font-size: 0.8rem;
        font-weight: 700;
        box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
    }

    .stats-pill .label {
        opacity: 0.8;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Games Gallery Grid */
    .games-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 3rem;
    }
    
    .game-item {
        transition: transform 0.4s cubic-bezier(0.2, 1, 0.2, 1);
    }
    
    .poster-card {
        background: var(--bg-surface-solid);
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 15px 35px -10px rgba(0,0,0,0.15);
        border: 1px solid var(--border-subtle);
        transition: all 0.4s cubic-bezier(0.2, 1, 0.2, 1);
        display: flex;
        flex-direction: column;
    }
    
    .game-item:hover .poster-card {
        transform: translateY(-12px);
        box-shadow: 0 30px 60px -20px rgba(0,0,0,0.3);
        border-color: var(--accent-primary);
    }

    .poster-image-area {
        position: relative;
        aspect-ratio: 3 / 4;
        overflow: hidden;
        background: #000;
    }

    .poster-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s cubic-bezier(0.2, 1, 0.2, 1);
    }

    .game-item:hover .poster-img {
        transform: scale(1.1);
        opacity: 0.8;
    }

    .poster-glow {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 50% 50%, var(--accent-primary) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.4s ease;
        mix-blend-mode: soft-light;
    }

    .game-item:hover .poster-glow {
        opacity: 0.4;
    }

    .poster-empty {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-surface-hover);
        color: var(--text-muted);
    }

    .empty-icon { width: 4rem; height: 4rem; opacity: 0.2; }

    /* Glass Info Panel */
    .poster-info-glass {
        position: absolute;
        bottom: 12px;
        left: 12px;
        right: 12px;
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 16px;
        padding: 1rem;
        transition: all 0.4s cubic-bezier(0.2, 1, 0.2, 1);
        z-index: 10;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    }

    :global([data-theme="dark"]) .poster-info-glass {
        background: rgba(30, 41, 59, 0.8);
        border-color: rgba(255, 255, 255, 0.05);
    }

    .game-item:hover .poster-info-glass {
        bottom: 18px;
        padding-bottom: 1.5rem;
        background: rgba(255, 255, 255, 0.9);
    }

    :global([data-theme="dark"]) .game-item:hover .poster-info-glass {
        background: rgba(15, 23, 42, 0.95);
    }

    .info-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
    }

    .game-name-title {
        font-size: 1.15rem;
        font-weight: 800;
        color: var(--text-main);
        line-height: 1.25;
        margin: 0;
        transition: color 0.3s;
    }

    .community-count {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--accent-primary);
        background: var(--accent-soft);
        padding: 0.25rem 0.6rem;
        border-radius: 8px;
        flex-shrink: 0;
    }

    .icon-xxs { width: 0.8rem; height: 0.8rem; }

    /* Revealed Owners */
    .owner-reveal {
        height: 0;
        opacity: 0;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.2, 1, 0.2, 1);
        margin-top: 0;
    }

    .game-item:hover .owner-reveal {
        height: auto;
        opacity: 1;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-subtle);
    }

    .avatar-stack {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .stack-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: 2px solid var(--bg-surface-solid);
        overflow: hidden;
        margin-left: -10px;
        background: var(--bg-surface-hover);
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .stack-avatar:first-child { margin-left: 0; }

    .stack-avatar img { width: 100%; height: 100%; object-fit: cover; }

    .stack-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--accent-primary);
        color: white;
        font-size: 0.75rem;
        font-weight: 800;
    }

    .stack-more {
        margin-left: 0.5rem;
        font-size: 0.7rem;
        font-weight: 800;
        color: var(--text-muted);
    }

    .owner-names-mini {
        font-size: 0.75rem;
        color: var(--text-muted);
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .owner-empty {
        font-size: 0.8rem;
        color: var(--text-muted);
        margin: 0;
        font-style: italic;
    }

    /* Empty State */
    .empty-gallery {
        text-align: center;
        padding: 5rem 0;
    }

    .empty-icon-lg {
        width: 5rem;
        height: 5rem;
        color: var(--text-muted);
        opacity: 0.2;
        margin-bottom: 2rem;
    }

    .empty-gallery h2 { margin-bottom: 1rem; opacity: 0.8; }
    .empty-gallery p { color: var(--text-muted); }

    @media (max-width: 640px) {
        .games-gallery { grid-template-columns: repeat(auto-fill, minmax(240px, 1fr)); gap: 2rem; }
        .search-section { margin-bottom: 3rem; margin-top: -1.5rem; }
        .search-bar-glass {
            max-width: 100%;
            gap: 0.75rem;
            padding: 0.5rem 0.75rem 0.5rem 1rem;
        }
        .search-bar-glass:focus-within { max-width: 100%; }
        .stats-pill {
            padding: 0.4rem 0.75rem;
            flex-shrink: 0;
        }
        .stats-pill .label { display: none; }
        .stats-pill .count::after { content: '件'; font-weight: 500; margin-left: 0.15em; }
        .poster-info-glass { bottom: 8px; left: 8px; right: 8px; }
    }

    /* スマホ: タップでプレイヤー一覧を表示（ホバーが効かないため） */
    @media (max-width: 768px) {
        .game-item { cursor: pointer; }
        .game-item .owner-reveal {
            height: 0;
            opacity: 0;
            margin-top: 0;
            padding-top: 0;
            border-top: none;
        }
        .game-item:hover .owner-reveal {
            height: 0;
            opacity: 0;
            margin-top: 0;
            padding-top: 0;
            border-top: none;
        }
        .game-item.is-expanded .owner-reveal {
            height: auto;
            opacity: 1;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--border-subtle);
        }
        .game-item.is-expanded .poster-info-glass {
            bottom: 18px;
            padding-bottom: 1.5rem;
        }
    }
</style>
