---
import Layout from "../../layouts/Layout.astro";
import { directus, readItems, skipDirectusFetch } from "../../lib/directus";
import { Image, User, Calendar, ArrowRight, MessageSquare, Tag, Sparkles } from "lucide-astro";
import PostCard from "../../components/PostCard.astro";

let posts: Array<{
  id: number;
  title: string;
  slug: string;
  content: string;
  published_date: string;
  category: "tech" | "game" | "misc" | string;
  author?: { id: number; name: string; avatar?: string };
  image?: string;
  tags?: string[];
}> = [];

const tag = Astro.url.searchParams.get("tag");

// Safely fetch data
if (!skipDirectusFetch) {
  try {
    // Fetch all published posts and filter client-side to avoid JSON operator errors
    const fetchedPosts = await directus.request(
        readItems("posts", {
          fields: [
            "id",
            "title",
            "slug",
            "content",
            "published_date",
            "category",
            { author: ["id", "name", "avatar"] },
            "image",
            "tags",
          ],
          filter: { status: { _eq: "published" } },
          sort: ["-published_date"],
        })
      );
    
    let allPosts = fetchedPosts ?? [];
    
    // Filter by tag in memory if needed
    if (tag) {
        const targetTag = tag.toLowerCase();
        posts = allPosts.filter(p => 
            p.tags?.some(t => t.toLowerCase() === targetTag)
        );
    } else {
        posts = allPosts;
    }
    
    console.log(`[Posts] Loaded ${posts.length} items (Total: ${allPosts.length}). Tag selector: ${tag || 'none'}`);
  } catch (e) {
    console.error("[Posts] Error fetching data:", e);
    posts = [];
  }
}

const formatDate = (dateStr: string) => {
    return new Date(dateStr).toLocaleDateString('ja-JP', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    });
};
---

<Layout title="Adventures" description="メンバーが遊んだゲームや活動の記録">
    <div class="hero-section">
        <div class="hero-bg">
            <div class="orb orb-1"></div>
            <div class="orb orb-2"></div>
        </div>
        <div class="container hero-content">
            <div class="badge-wrapper">
                <span class="hero-badge">
                    <MessageSquare class="icon-sm" /> Stories
                </span>
            </div>
            <h1 class="hero-title">
                活動記録と<br class="mobile-break" />
                <span class="gradient-text">思い出</span>
            </h1>
            <p class="hero-desc">
                コミュニティメンバーの活動日記、ゲームプレイの記録、<br class="desktop-break"/>
                その他の雑記などを紹介します。
            </p>

            {tag && (
                <div class="filter-indicator-glass">
                  <span class="filter-label">タグ:</span>
                  <span class="active-tag">#{tag}</span>
                  <a href="/posts" class="clear-filter">
                      <span class="clear-text">解除</span>
                      <span class="clear-icon">×</span>
                  </a>
                </div>
            )}
        </div>
    </div>

  <div class="container main-content">
    {posts.length > 0 ? (
      <div class="clean-grid">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    ) : (
      <div class="glass-card empty-state">
        <p>記事が見つかりませんでした。</p>
        {tag && <a href="/posts" class="btn btn-sm">すべての記事を表示</a>}
      </div>
    )}
  </div>
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 6rem 0 4rem;
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        pointer-events: none;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.6;
    }

    .orb-1 {
        top: -10%;
        left: 20%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, var(--accent-secondary) 0%, transparent 70%);
        animation: float 10s ease-in-out infinite;
    }

    .orb-2 {
        bottom: 10%;
        right: 20%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, var(--accent-primary) 0%, transparent 70%);
        animation: float 12s ease-in-out infinite reverse;
    }

    @keyframes float {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(20px, -20px); }
    }

    .hero-content {
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .badge-wrapper {
        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: var(--bg-surface);
        border: 1px solid var(--border-glass);
        border-radius: 99px;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--accent-primary);
        box-shadow: var(--shadow-sm);
        backdrop-filter: blur(4px);
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        letter-spacing: -0.03em;
    }

    .gradient-text {
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: transparent;
    }

    .hero-desc {
        font-size: 1.125rem;
        color: var(--text-muted);
        line-height: 1.7;
        max-width: 600px;
        margin: 0 auto;
    }

    .icon-sm { width: 1rem; height: 1rem; }
    .mobile-break { display: none; }

    @media (max-width: 768px) {
        .hero-section {
            padding: 4rem 0 3rem;
        }
        .hero-title {
            font-size: 2.25rem;
        }
        .mobile-break { display: block; }
        .desktop-break { display: none; }
    }

  /* Content */
  .main-content {
      padding-bottom: 8rem;
      position: relative;
      z-index: 2;
  }

  .clean-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2.5rem;
  }

  .empty-state {
      text-align: center;
      padding: 8rem 2rem;
      color: var(--text-muted);
  }

  /* Filter Indicator */
  .filter-indicator-glass {
      margin-top: 2rem;
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.5rem 1rem 0.5rem 1.25rem;
      background: var(--bg-surface);
      backdrop-filter: blur(12px);
      border-radius: 100px;
      border: 1px solid var(--border-glass);
      font-size: 0.95rem;
      box-shadow: var(--shadow-sm);
  }

  .active-tag {
      color: var(--accent-primary);
      font-weight: 700;
  }

  .clear-filter {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      background: var(--bg-surface-hover);
      padding: 0.25rem 0.75rem;
      border-radius: 100px;
      font-size: 0.8rem;
      color: var(--text-muted);
      cursor: pointer;
      transition: all 0.2s;
      border: 1px solid var(--border-subtle);
  }

  .clear-filter:hover {
      background: var(--accent-soft);
      color: var(--accent-primary);
      border-color: var(--accent-soft);
  }

  .btn-sm {
      margin-top: 2rem;
      padding: 0.75rem 2rem;
      font-size: 1rem;
      border-radius: 100px;
  }

  @media (max-width: 768px) {
      .clean-grid { grid-template-columns: 1fr; gap: 2rem; }
  }
</style>
