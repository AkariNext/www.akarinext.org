---
import Layout from "../../layouts/Layout.astro";
import { directus, readItems, skipDirectusFetch } from "../../lib/directus";
import { Image, User, Calendar, ArrowRight, MessageSquare } from "lucide-astro";

let posts: Array<{
  id: number;
  title: string;
  slug: string;
  content: string;
  published_date: string;
  author?: { id: number; name: string; avatar?: string };
  image?: string;
}> = [];

// Safely fetch data
if (!skipDirectusFetch) {
  try {
    posts =
      (await directus.request(
        readItems("posts", {
          fields: [
            "id",
            "title",
            "slug",
            "content",
            "published_date",
            { author: ["id", "name", "avatar"] },
            "image",
          ],
          filter: { status: { _eq: "published" } },
          sort: ["-published_date"],
        })
      )) ?? [];
  } catch (e) {
    // Silent fail
  }
}

const formatDate = (dateStr: string) => {
    return new Date(dateStr).toLocaleDateString('ja-JP', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    });
};
---

<Layout title="Adventures" description="メンバーが遊んだゲームや活動の記録">
  <div class="page-header">
    <div class="container text-center">
      <h1 class="page-title"><MessageSquare class="icon icon-lg" /> Stories & Adventures</h1>
      <p class="page-desc">
        Read about the latest journeys and experiences from our community.
      </p>
    </div>
  </div>

  <div class="container">
    {posts.length > 0 ? (
      <div class="clean-grid">
        {posts.map((post) => (
          <article class="clean-card post-card">
            <a href={`/posts/${post.slug}`} class="card-link-wrapper" aria-label={post.title}>
                {post.image ? (
                    <div class="image-frame">
                        <img src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${post.image}?key=card-thumb`} alt={post.title} class="post-image" loading="lazy" />
                    </div>
                ) : (
                    <div class="image-frame placeholder-frame">
                        <Image class="placeholder-icon" />
                    </div>
                )}
            </a>
            <div class="card-body">
              <div class="meta-row">
                 <span class="date-badge"><Calendar class="icon icon-xs" /> {formatDate(post.published_date)}</span>
              </div>
              
              <h2 class="post-item-title">
                <a href={`/posts/${post.slug}`} class="title-link">
                    {post.title}
                </a>
              </h2>
              
              {post.content && (
                <p class="post-excerpt">
                  {post.content.replace(/<[^>]*>?/gm, '').substring(0, 100)}...
                </p>
              )}
              
              <div class="card-footer">
                  {post.author?.name && (
                      <a href={`/users/${post.author.id}`} class="author-link" title="View Profile">
                          <User class="icon icon-xs" /> {post.author.name}
                      </a>
                  )}
                  {!post.author?.name && <span></span>}
                  
                  <a href={`/posts/${post.slug}`} class="read-link">Read <ArrowRight class="icon icon-xs" /></a>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="glass-card empty-state">
        <p>No stories found.</p>
      </div>
    )}
  </div>
</Layout>

<style>
  .page-header {
      text-align: center;
      padding: 6rem 0 4rem;
      background: radial-gradient(circle at 50% 0%, var(--accent-soft), transparent 70%);
  }
  
  .page-title {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      font-size: 3rem;
      margin-bottom: 1rem;
      color: var(--text-main);
      font-weight: 800;
      letter-spacing: -0.03em;
  }
  
  .page-desc {
      color: var(--text-muted);
      max-width: 600px;
      margin: 0 auto;
      font-size: 1.15rem;
      line-height: 1.6;
  }

  .clean-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    padding-bottom: 5rem;
  }

  .clean-card {
    /* Extending global class with specifics */
    padding: 0; 
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    color: inherit;
    transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1), box-shadow 0.3s ease;
    border: 1px solid var(--border-glass);
    background: var(--bg-surface);
  }
  
  .clean-card:hover {
     transform: translateY(-5px);
     box-shadow: var(--shadow-hover);
     background: var(--bg-surface-hover);
     border-color: var(--accent-light);
  }
  
  .image-frame {
      height: 220px;
      overflow: hidden;
      background: var(--bg-surface-hover);
      border-bottom: 1px solid var(--border-subtle);
      position: relative;
  }
  
  .placeholder-frame {
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--accent-soft);
  }
  
  .placeholder-icon {
      width: 3rem;
      height: 3rem;
      color: var(--accent-primary);
      opacity: 0.3;
  }
  
  .post-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
  }
  
  .clean-card:hover .post-image {
      transform: scale(1.08);
  }

  .card-body {
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  .meta-row {
      margin-bottom: 1rem;
  }
  
  .date-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--accent-primary);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      background: var(--accent-soft);
      padding: 0.35rem 0.75rem;
      border-radius: 99px;
  }
  
  .icon-xs {
      width: 0.8em;
      height: 0.8em;
  }
  
  .icon-lg {
      color: var(--accent-primary);
  }

  .post-item-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text-main);
    transition: color 0.2s;
  }
  
  .clean-card:hover .post-item-title .title-link {
      color: var(--accent-primary);
  }

  .title-link {
      text-decoration: none;
      color: inherit;
      transition: color 0.2s;
  }
  
  .title-link:hover {
      text-decoration: underline;
  }

  .post-excerpt {
    font-size: 0.95rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    flex: 1;
  }
  
  .card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1.25rem;
      border-top: 1px solid var(--border-subtle);
      font-size: 0.85rem;
  }
  
  .author-text {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-muted);
      font-weight: 500;
  }

  .read-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    color: var(--accent-primary);
    font-weight: 600;
    transition: transform 0.2s;
  }
  
  .clean-card:hover .read-link {
      transform: translateX(4px);
  }
  
  .read-link {
      text-decoration: none;
  }
  
  .author-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-muted);
      font-weight: 500;
      text-decoration: none;
      transition: color 0.2s;
      z-index: 2;
      position: relative;
  }
  
  .author-link:hover {
      color: var(--accent-primary);
      text-decoration: underline;
  }
  
  .empty-state {
      text-align: center;
      padding: 4rem;
      color: var(--text-muted);
  }
</style>
