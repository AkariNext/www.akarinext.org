---
import Layout from "../../layouts/Layout.astro";
import { directus, readItems, skipDirectusFetch } from "../../lib/directus";
import { Image, User, Calendar, ArrowRight, MessageSquare } from "lucide-astro";

let posts: Array<{
  id: number;
  title: string;
  slug: string;
  content: string;
  published_date: string;
  author?: { name: string; avatar?: string };
  image?: string;
}> = [];

// Safely fetch data
if (!skipDirectusFetch) {
  try {
    posts =
      (await directus.request(
        readItems("posts", {
          fields: [
            "id",
            "title",
            "slug",
            "content",
            "published_date",
            { author: ["name", "avatar"] },
            "image",
          ],
          filter: { status: { _eq: "published" } },
          sort: ["-published_date"],
        })
      )) ?? [];
  } catch (e) {
    // Silent fail
  }
}

const formatDate = (dateStr: string) => {
    return new Date(dateStr).toLocaleDateString('ja-JP', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    });
};
---

<Layout title="Adventures" description="メンバーが遊んだゲームや活動の記録">
  <div class="page-header">
    <div class="container text-center">
      <h1 class="page-title"><MessageSquare class="icon icon-lg" /> Stories & Adventures</h1>
      <p class="page-desc">
        Read about the latest journeys and experiences from our community.
      </p>
    </div>
  </div>

  <div class="container">
    {posts.length > 0 ? (
      <div class="clean-grid">
        {posts.map((post) => (
          <article class="clean-card post-card">
            {post.image ? (
                <div class="image-frame">
                    <img src={`${import.meta.env.PUBLIC_DIRECTUS_URL}/assets/${post.image}?key=card-thumb`} alt={post.title} class="post-image" loading="lazy" />
                </div>
            ) : (
                <div class="image-frame placeholder-frame">
                    <Image class="placeholder-icon" />
                </div>
            )}
            <div class="card-body">
              <div class="meta-row">
                 <span class="date-badge"><Calendar class="icon icon-xs" /> {formatDate(post.published_date)}</span>
              </div>
              
              <h2 class="post-item-title">
                <a href={`/posts/${post.slug}`}>{post.title}</a>
              </h2>
              
              {post.content && (
                <p class="post-excerpt">
                  {post.content.replace(/<[^>]*>?/gm, '').substring(0, 100)}...
                </p>
              )}
              
              <div class="card-footer">
                  {post.author?.name && <span class="author-text"><User class="icon icon-xs" /> {post.author.name}</span>}
                  <a href={`/posts/${post.slug}`} class="read-link">Read <ArrowRight class="icon icon-xs" /></a>
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="glass-card empty-state">
        <p>No stories found.</p>
      </div>
    )}
  </div>
</Layout>

<style>
  .page-header {
      text-align: center;
      padding: 4rem 0;
      background: linear-gradient(to bottom, rgba(255,255,255,0.5), transparent);
  }
  
  .page-title {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: var(--text-main);
  }
  
  .page-desc {
      color: var(--text-muted);
      max-width: 600px;
      margin: 0 auto;
      font-size: 1.1rem;
  }

  .clean-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    padding-bottom: 4rem;
  }

  .clean-card {
    /* Extending global class with specifics */
    padding: 0; 
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .image-frame {
      height: 200px;
      overflow: hidden;
      background: var(--bg-surface-hover);
      border-bottom: 1px solid var(--border-subtle);
      position: relative;
  }
  
  .placeholder-frame {
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(14, 165, 233, 0.05);
  }
  
  .placeholder-icon {
      width: 3rem;
      height: 3rem;
      color: var(--accent-soft);
      opacity: 0.5;
  }
  
  .post-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
  }
  
  .clean-card:hover .post-image {
      transform: scale(1.05);
  }

  .card-body {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  
  .meta-row {
      margin-bottom: 0.75rem;
  }
  
  .date-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.75rem;
      font-weight: 700;
      color: var(--accent-primary);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      background: rgba(14, 165, 233, 0.08);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
  }
  
  .icon-xs {
      width: 0.8em;
      height: 0.8em;
  }
  
  .icon-lg {
      color: var(--accent-primary);
  }

  .post-item-title {
    font-size: 1.35rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    font-weight: 700;
  }
  
  .post-item-title a {
      color: var(--text-main);
  }
  
  .post-item-title a:hover {
      color: var(--accent-secondary);
  }

  .post-excerpt {
    font-size: 0.95rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    flex: 1;
  }
  
  .card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid var(--border-subtle);
      font-size: 0.85rem;
  }
  
  .author-text {
      display: inline-flex;
      align-items: center;
      gap: 0.35rem;
      color: var(--text-muted);
      font-weight: 500;
  }

  .read-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--accent-primary);
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    transition: background 0.2s;
  }
  
  .read-link:hover {
      background: rgba(14, 165, 233, 0.1);
  }
  
  .empty-state {
      text-align: center;
      padding: 4rem;
      color: var(--text-muted);
  }
</style>
