---
import Layout from "../../layouts/Layout.astro";
import { directus, readItems, skipDirectusFetch } from "../../lib/directus";
import { Image, User, Calendar, ArrowRight, MessageSquare, Tag } from "lucide-astro";
import PostCard from "../../components/PostCard.astro";

let posts: Array<{
  id: number;
  title: string;
  slug: string;
  content: string;
  published_date: string;
  category: "tech" | "game" | "misc" | string;
  author?: { id: number; name: string; avatar?: string };
  image?: string;
  tags?: string[];
}> = [];

const tag = Astro.url.searchParams.get("tag");

// Safely fetch data
if (!skipDirectusFetch) {
  try {
    // Fetch all published posts and filter client-side to avoid JSON operator errors
    const fetchedPosts = await directus.request(
        readItems("posts", {
          fields: [
            "id",
            "title",
            "slug",
            "content",
            "published_date",
            "category",
            { author: ["id", "name", "avatar"] },
            "image",
            "tags",
          ],
          filter: { status: { _eq: "published" } },
          sort: ["-published_date"],
        })
      );
    
    let allPosts = fetchedPosts ?? [];
    
    // Filter by tag in memory if needed
    if (tag) {
        const targetTag = tag.toLowerCase();
        posts = allPosts.filter(p => 
            p.tags?.some(t => t.toLowerCase() === targetTag)
        );
    } else {
        posts = allPosts;
    }
    
    console.log(`[Posts] Loaded ${posts.length} items (Total: ${allPosts.length}). Tag selector: ${tag || 'none'}`);
  } catch (e) {
    console.error("[Posts] Error fetching data:", e);
    posts = [];
  }
}

const formatDate = (dateStr: string) => {
    return new Date(dateStr).toLocaleDateString('ja-JP', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
    });
};
---

<Layout title="Adventures" description="メンバーが遊んだゲームや活動の記録">
  <div class="page-header">
    <div class="container text-center">
      <h1 class="page-title"><MessageSquare class="icon icon-lg" /> Stories & Adventures</h1>
      <p class="page-desc">
        コミュニティメンバーの活動や最新の情報を紹介します。
      </p>

      {tag && (
        <div class="filter-indicator">
          <span class="filter-label">タグで絞り込み中:</span>
          <span class="active-tag">#{tag}</span>
          <a href="/posts" class="clear-filter">フィルターを解除</a>
        </div>
      )}
    </div>
  </div>

  <div class="container">
    {posts.length > 0 ? (
      <div class="clean-grid">
        {posts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    ) : (
      <div class="glass-card empty-state">
        <p>記事が見つかりませんでした。</p>
        {tag && <a href="/posts" class="btn btn-sm">すべての記事を表示</a>}
      </div>
    )}
  </div>
</Layout>

<style>
  .page-header {
      text-align: center;
      padding: 8rem 0 6rem;
      background: radial-gradient(circle at 50% 0%, var(--accent-soft), transparent 70%);
  }
  
  .page-title {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      font-size: 3.5rem;
      margin-bottom: 1.5rem;
      color: var(--text-main);
      font-weight: 900;
      letter-spacing: -0.04em;
  }
  
  .page-desc {
      color: var(--text-muted);
      max-width: 600px;
      margin: 0 auto;
      font-size: 1.25rem;
      line-height: 1.6;
      font-weight: 500;
  }

  .clean-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2.5rem;
    padding-bottom: 8rem;
  }

  .empty-state {
      text-align: center;
      padding: 8rem 2rem;
      color: var(--text-muted);
  }

  .filter-indicator {
      margin-top: 3rem;
      display: inline-flex;
      align-items: center;
      gap: 1.25rem;
      padding: 0.85rem 2rem;
      background: var(--bg-surface-solid);
      border-radius: 100px;
      border: 1px solid var(--border-glass);
      font-size: 1rem;
      box-shadow: var(--shadow-glass);
  }

  .active-tag {
      color: var(--accent-primary);
      font-weight: 900;
  }

  .clear-filter {
      font-size: 0.9rem;
      color: var(--text-muted);
      text-decoration: underline;
      transition: all 0.3s ease;
  }

  .clear-filter:hover {
      color: var(--accent-primary);
  }

  .btn-sm {
      margin-top: 2rem;
      padding: 0.75rem 2rem;
      font-size: 1rem;
      border-radius: 100px;
  }

  @media (max-width: 768px) {
      .page-title { font-size: 2.5rem; flex-direction: column; gap: 0.5rem; }
      .clean-grid { grid-template-columns: 1fr; gap: 2rem; }
  }
</style>
