---
import Layout from "../../layouts/Layout.astro";
import { payloadClient, type Announcement } from "../../lib/payload";
import { processContentHtml } from "../../lib/content";
import { lexicalToHtml } from "../../lib/richtext";
import { Megaphone, Calendar, Clock, BellRing, Sparkles } from "lucide-astro";

export const prerender = false;

let announcements: Announcement[] = [];
let processedAnnouncements: any[] = [];

try {
    const res = await payloadClient
        .items<Announcement>("announcements")
        .readByQuery({
            sort: ["-published_date", "-createdAt"],
            where: {
                status: { equals: "published" },
            },
            limit: 50,
        });
    announcements = res;

    // Process content (if string)
    // Note: Payload richText is JSON. If data migrated as string, this works.
    // If not, we need a serializer.
    processedAnnouncements = await Promise.all(
        announcements.map(async (ann) => {
            let content = "";
            if (ann.content) {
                // @ts-ignore
                const rawHtml = await lexicalToHtml(ann.content);
                content = await processContentHtml(rawHtml);
            }
            return {
                ...ann,
                processedContent: content,
            };
        })
    );
} catch (e) {
    console.error("Error fetching announcements:", e);
    announcements = [];
}

const formatDate = (dateVal: string | null | undefined) => {
    if (!dateVal) return "";
    return new Date(dateVal).toLocaleDateString("ja-JP", {
        year: "numeric",
        month: "short",
        day: "numeric",
    });
};
---

<Layout
    title="News"
    description="最新のニュースとアップデート情報をお届けします。"
>
    <div class="hero-section">
        <div class="hero-bg">
            <div class="orb orb-1"></div>
            <div class="orb orb-2"></div>
        </div>
        <div class="container hero-content">
            <div class="badge-wrapper">
                <span class="hero-badge">
                    <Sparkles class="icon-sm" /> Latest News
                </span>
            </div>
            <h1 class="hero-title">
                最新の<br class="mobile-break" />
                <span class="gradient-text">ニュース</span>
            </h1>
            <p class="hero-desc">
                コミュニティの最新情報、イベントのお知らせ、<br
                    class="desktop-break"
                />
                メンテナンス情報をいち早くお届けします。
            </p>
        </div>
    </div>

    <div class="container container-narrow content-wrapper">
        {
            processedAnnouncements.length > 0 ? (
                <div class="timeline-container">
                    {processedAnnouncements.map((ann) => {
                        const annDate =
                            ann.published_date || new Date().toISOString();
                        const dateObj = new Date(annDate);
                        const htmlContent = ann.processedContent;

                        return (
                            <article id={`ann-${ann.id}`} class="timeline-item">
                                <div class="timeline-date-col">
                                    <span class="date-badge">
                                        <span class="date-month">
                                            {dateObj.toLocaleDateString(
                                                "en-US",
                                                { month: "short" }
                                            )}
                                        </span>
                                        <span class="date-day">
                                            {dateObj.getDate()}
                                        </span>
                                    </span>
                                </div>
                                <div class="timeline-content glass-card">
                                    <div class="card-header">
                                        <h2 class="ann-title">{ann.title}</h2>
                                        <div class="meta-inline">
                                            <Clock class="icon-xs" />{" "}
                                            {formatDate(annDate)}
                                        </div>
                                    </div>
                                    <div class="prose" set:html={htmlContent} />
                                </div>
                            </article>
                        );
                    })}
                </div>
            ) : (
                <div class="glass-card empty-state">
                    <div class="empty-icon-wrapper">
                        <BellRing class="empty-icon" />
                    </div>
                    <h3>まだお知らせはありません</h3>
                    <p>新しい情報が追加されるのをお待ちください。</p>
                </div>
            )
        }
    </div>
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 6rem 0 4rem;
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        pointer-events: none;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.6;
    }

    .orb-1 {
        top: -10%;
        left: 20%;
        width: 300px;
        height: 300px;
        background: radial-gradient(
            circle,
            var(--accent-secondary) 0%,
            transparent 70%
        );
        animation: float 10s ease-in-out infinite;
    }

    .orb-2 {
        bottom: 10%;
        right: 20%;
        width: 400px;
        height: 400px;
        background: radial-gradient(
            circle,
            var(--accent-primary) 0%,
            transparent 70%
        );
        animation: float 12s ease-in-out infinite reverse;
    }

    @keyframes float {
        0%,
        100% {
            transform: translate(0, 0);
        }
        50% {
            transform: translate(20px, -20px);
        }
    }

    .hero-content {
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .badge-wrapper {
        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: var(--bg-surface);
        border: 1px solid var(--border-glass);
        border-radius: 99px;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--accent-primary);
        box-shadow: var(--shadow-sm);
        backdrop-filter: blur(4px);
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        letter-spacing: -0.03em;
    }

    .gradient-text {
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            var(--accent-secondary)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: transparent;
    }

    .hero-desc {
        font-size: 1.125rem;
        color: var(--text-muted);
        line-height: 1.7;
        max-width: 600px;
        margin: 0 auto;
    }

    .icon-sm {
        width: 1rem;
        height: 1rem;
    }
    .mobile-break {
        display: none;
    }

    /* Content Layout */
    .content-wrapper {
        position: relative;
        z-index: 1;
    }

    .container-narrow {
        max-width: 800px;
    }

    .timeline-container {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        padding-bottom: 5rem;
        position: relative;
    }

    /* Center line */
    .timeline-container::before {
        content: "";
        position: absolute;
        top: 2rem;
        bottom: 2rem;
        left: 2.25rem; /* Align with date badges center */
        width: 2px;
        background: linear-gradient(
            to bottom,
            transparent,
            var(--border-subtle) 10%,
            var(--border-subtle) 90%,
            transparent
        );
        z-index: 0;
    }

    .timeline-item {
        display: flex;
        gap: 2.5rem;
        position: relative;
        z-index: 1;
    }

    .timeline-date-col {
        flex-shrink: 0;
        width: 4.5rem;
        padding-top: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }

    .date-badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 4.5rem;
        height: 4.5rem;
        background: var(--bg-surface);
        border: 1px solid var(--border-light);
        border-radius: 16px; /* Squircle-ish */
        box-shadow: var(--shadow-sm);
        color: var(--text-main);
        z-index: 2;
        backdrop-filter: blur(8px);
    }

    .date-day {
        font-size: 1.5rem;
        line-height: 1;
        font-weight: 700;
        color: var(--accent-primary);
    }

    .date-month {
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 600;
        opacity: 0.7;
        margin-bottom: 0.1rem;
    }

    .timeline-content {
        flex: 1;
        padding: 0; /* Clear padding for card structure */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .timeline-content:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-hover);
    }

    .card-header {
        padding: 2rem 2rem 1.5rem;
        border-bottom: 1px solid var(--border-subtle);
    }

    .ann-title {
        font-size: 1.75rem;
        margin-bottom: 0.75rem;
        line-height: 1.3;
        font-weight: 700;
        color: var(--text-main);
    }

    .meta-inline {
        font-size: 0.9rem;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .icon-xs {
        width: 1rem;
        height: 1rem;
    }

    .timeline-content .prose {
        padding: 1.5rem 2rem 2rem;
        font-size: 1rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 6rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .empty-icon-wrapper {
        width: 4rem;
        height: 4rem;
        border-radius: 50%;
        background: var(--bg-surface-hover);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        color: var(--text-muted);
    }

    .empty-icon {
        width: 2rem;
        height: 2rem;
    }

    .empty-state h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-main);
        margin: 0;
    }

    .empty-state p {
        color: var(--text-muted);
        margin: 0;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding: 4rem 0 3rem;
        }

        .hero-title {
            font-size: 2.25rem;
        }

        .mobile-break {
            display: block;
        }
        .desktop-break {
            display: none;
        }

        .timeline-container {
            gap: 2rem;
            padding-left: 0;
        }

        .timeline-container::before {
            left: 1.25rem; /* Adjust line position for mobile */
            top: 3rem;
        }

        .timeline-item {
            flex-direction: column;
            gap: 1rem;
            padding-left: 3rem; /* Space for the timeline line */
        }

        .timeline-date-col {
            position: absolute;
            left: 0;
            top: 0;
            width: 2.5rem;
            background: transparent;
            align-items: flex-start;
        }

        .date-badge {
            flex-direction: column;
            width: 3rem;
            height: 3rem;
            padding: 0;
            border-radius: 10px;
        }

        .date-day {
            font-size: 1.1rem;
        }
        .date-month {
            font-size: 0.6rem;
        }

        .card-header {
            padding: 1.5rem;
        }

        .timeline-content .prose {
            padding: 1rem 1.5rem 1.5rem;
        }

        .ann-title {
            font-size: 1.4rem;
        }
    }
</style>
